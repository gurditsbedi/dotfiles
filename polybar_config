format-connected-underline = #00acc1

label-disconnected = WiFi ×
format-disconnected = <label-disconnected>
format-disconnected-underline = #00acc1



ramp-signal-0 = 0/5
ramp-signal-1 = 1/5
ramp-signal-2 = 2/5
ramp-signal-3 = 3/5
ramp-signal-4 = 4/5
ramp-signal-5 = 5/5

